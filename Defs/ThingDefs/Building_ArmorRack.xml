<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>ArmorRacks_ArmorRack</defName>
        <label>armor rack</label>
        <description>Good for keeping sets of apparel conveniently organized. Prevents deteriorating.</description>
        <thingClass>ArmorRacks.Things.ArmorRack</thingClass>
        <graphicData>
            <texPath>ArmorRacks_ArmorRack</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(1,1)</drawSize>
        </graphicData>
        <altitudeLayer>Building</altitudeLayer>
        <useHitPoints>True</useHitPoints>
        <statBases>
            <MaxHitPoints>180</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <WorkToBuild>1000</WorkToBuild>
            <WorkTableWorkSpeedFactor>0.5</WorkTableWorkSpeedFactor>
            <Cleanliness>-5</Cleanliness>
        </statBases>
        <size>(1,1)</size>
        <designationCategory>Furniture</designationCategory>
        <passability>PassThroughOnly</passability>
        <pathCost>70</pathCost>
        <costStuffCount>40</costStuffCount>
        <stuffCategories>
            <li>Metallic</li>
            <li>Woody</li>
            <li>Stony</li>
        </stuffCategories>
        <inspectorTabs>
            <li>ITab_Storage</li>
            <li>ArmorRacks.ITabs.ITabArmorRackContents</li>
        </inspectorTabs>
        <defaultPlacingRot>South</defaultPlacingRot>
        <building>
            <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
            <ignoreStoredThingsBeauty>false</ignoreStoredThingsBeauty>
            <defaultStorageSettings>
                <priority>Important</priority>
                <filter>
                    <categories>
                        <li>Apparel</li>
                        <li>Weapons</li>
                    </categories>
                </filter>
            </defaultStorageSettings>
        </building>
        <surfaceType>Item</surfaceType>
        <researchPrerequisites>
            <li>ComplexFurniture</li>
        </researchPrerequisites>
        <comps>
            <li Class="ArmorRacks.ThingComps.ArmorRackCompProperties" />
            <li>
                <compClass>CompForbiddable</compClass>
            </li>
        </comps>
        <drawGUIOverlay>True</drawGUIOverlay>
    </ThingDef>


    <ThingDef ParentName="BuildingBase">
        <defName>ArmorRacks_MechanizedArmorRack</defName>
